<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         >

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>jt.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistServlet</servlet-name>
        <servlet-class>jt.servlet.RegistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowServlet</servlet-name>
        <servlet-class>jt.servlet.ShowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showSecondServlet</servlet-name>
        <servlet-class>jt.servlet.ShowSecondServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteServlet</servlet-name>
        <servlet-class>jt.servlet.WriteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReplyServlet</servlet-name>
        <servlet-class>jt.servlet.ReplyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>jt.servlet.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowRMServlet</servlet-name>
        <servlet-class>jt.servlet.ShowRMServlet</servlet-class>
    </servlet>







    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistServlet</servlet-name>
        <url-pattern>/RegistServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowServlet</servlet-name>
        <url-pattern>/ShowServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showSecondServlet</servlet-name>
        <url-pattern>/showSecondServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteServlet</servlet-name>
        <url-pattern>/WriteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReplyServlet</servlet-name>
        <url-pattern>/ReplyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowRMServlet</servlet-name>
        <url-pattern>/ShowRMServlet</url-pattern>
    </servlet-mapping>
</web-app>